@model ICollection<SellBook.Models.Publication.PublicationsViewModel>

@if (Model.Count == 0)
{
    <div class="text-danger"> Няма Намерени Резултати</div>
}
else
{
    foreach (var item in Model)
    {
        <div class="row bordered">
            <div class="col-md-2">
                <img src="@Url.Content(item.Image)" title="@item.Title" width="150" height="150" />
            </div>
            <div class="col-md-4">
                @Html.ActionLink(item.Title, "", new { }, new { @class = "text-primary" })
                <br />
                <small class="text-info">@item.BreadCrumb</small>
                <br />
                <span>@item.City</span>
                <br />
                <span>@item.AddedOn</span>
            </div>
            <div class="col-md-2">
                @if (item.Price == 0)
                    {
                    @: оферта
                }
                    else
                    {
                    @item.Price
                }
            </div>
        </div>
    }

}
